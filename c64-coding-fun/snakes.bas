#RetroDevStudio.MetaData.BASIC:2049,BASIC V2,uppercase,10,10
10 PRINT CHR$(147)
20 DIM X(100), Y(100)
30 L=5: X(1)=10: Y(1)=12: DX=1: DY=0: S=0
40 FX=INT(RND(1)*38): FY=INT(RND(1)*24)
50 GOSUB 500
60 GET A$: GOSUB 200
70 GOSUB 300
80 GOTO 50
200 REM HANDLE KEY INPUT
210 IF A$="W" THEN DX=0: DY=-1
220 IF A$="S" THEN DX=0: DY=1
230 IF A$="A" THEN DX=-1: DY=0
240 IF A$="D" THEN DX=1: DY=0
250 RETURN
300 REM UPDATE SNAKE
310 FOR I=L TO 2 STEP -1
320   X(I)=X(I-1)
330   Y(I)=Y(I-1)
340 NEXT I
350 X(1)=X(1)+DX
360 Y(1)=Y(1)+DY
370 IF X(1)=FX AND Y(1)=FY THEN S=S+10: L=L+1: FX=INT(RND(1)*38): FY=INT(RND(1)*24)
380 IF X(1)<0 OR X(1)>38 OR Y(1)<0 OR Y(1)>24 THEN PRINT "GAME OVER! SCORE:";S: END
390 FOR I=2 TO L
400   IF X(1)=X(I) AND Y(1)=Y(I) THEN PRINT "GAME OVER! SCORE:";S: END
410 NEXT I
420 FOR T=1 TO 8: NEXT T
430 RETURN
500 REM DRAW SNAKE AND FOOD
510 PRINT CHR$(147)
520 POKE 1024+40*FY+FX, 42
530 FOR I=1 TO L
540   POKE 1024+40*Y(I)+X(I), 88
550 NEXT I
560 RETURN
